#:kivy 1.0.8


<ScenarioSelectorButton>:
	pos:self.pos
	canvas:
		Color:
			rgb: (1,1,1)
		BorderImage:
			pos:self.pos
			size: self.size
			source: self.source	

<ScenarioSelector>:		
	cols:2
	size_hint:(None,None)
	size:(512,163)
	center: self.center
	spacing:0
	padding:0
	x: 1500

<MapHandler>:
	cols:2
	size_hint:(None,None)
	size: (128,56)
	pos_hint:{'right':0.98,'y':0.03}
	auto_bring_to_front: True

<MapThumbnail>:
	imageth: imageth
	do_scale: False
	do_rotation: False
	size_hint: (None, None)
	size: (300,300)	

	length_flag: (root.imagemap.center_y - self.center_y)


	Image:
		id:imageth
		keep_data: True
		size_hint: (None,None)
		source: root.media_picture_thumbnail
		pos: 0,0
		size: 300,300

		# canvas:
		# 	Color:
		# 		rgb: root.color
		# 	Line:
		# 		circle: self.width/2, self.height/2, self.width/2-3, 0, 360
