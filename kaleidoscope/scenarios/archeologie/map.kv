	Label:
		text: root.current_country #if root.scale == 1 else ''
		font_size: 14
		font_name: 'data/fonts/FuturaLT-Bold.ttf'
		# color: (0,0,0,1)
		y: root.height -5
		x: 0
		valign: 'bottom'
