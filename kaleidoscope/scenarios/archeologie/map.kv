			Color:
				rgba: root.color + [1] if self.text != '' else (1,1,1,0)
			Rectangle:
				source: 'data/etiquettes.png'
				size: 180, 60
				pos: self.width/2 - 90 , root.height + 5
	
<MapEmptyPlace>:
	size_hint: (None, None)
	size: (130,60)
	canvas.before:
		Rectangle:
			size: self.size
			# source: 'data/freeplace.png'
			# source: 'freeplace.png'
			pos: self.pos

