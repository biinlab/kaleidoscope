<ScenarioSelectorButton>:
	pos:self.pos
	canvas:
		Color:
			rgb: (1,1,1)
		BorderImage:
			pos:self.pos
			size: self.size
			source: self.source	

<ScenarioSelector>:		
	cols:2
	size_hint:(None,None)
	size:(512,163)
	center: self.center
	spacing:0
	padding:0

